# Charles Schwab API Trading Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_PASSWORD=your_secure_db_password_here
POSTGRES_DB=schwab_trading
POSTGRES_USER=schwab_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application Configuration
NODE_ENV=production
API_BASE_URL=http://localhost:8080
DATABASE_URL=postgresql://schwab_user:your_password@postgres:5432/schwab_trading
REDIS_URL=redis://:your_password@redis:6379

# Domain and SSL
DOMAIN=your_domain.com
EMAIL=your_admin_email@domain.com

# NextAuth Configuration
NEXTAUTH_URL=https://your_domain.com
NEXTAUTH_SECRET=your_nextauth_secret_key_here_32_chars

# Google SSO Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Schwab API Configuration
SCHWAB_CLIENT_ID=your_schwab_client_id_here
SCHWAB_CLIENT_SECRET=your_schwab_client_secret_here
SCHWAB_CALLBACK_URL=https://your_domain.com/auth/schwab/callback

# Notification Configuration
NOTIFICATION_EMAIL=your_notification_email@domain.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# SMTP Configuration (for email alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=alerts@your_domain.com
